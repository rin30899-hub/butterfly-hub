  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    body { background: linear-gradient(120deg,#f6d365,#fda085); }
    .form-card { background:#ffffffdd; border-radius:16px; padding:2rem; }
      .brand-bar {
    background: #2B2E32 !important;
    border-bottom: 1px solid rgba(0,0,0,.08);
  }
  .brand-bar .navbar-brand,
  .brand-bar .nav-link,
  .brand-bar .navbar-text { color: white !important; }
